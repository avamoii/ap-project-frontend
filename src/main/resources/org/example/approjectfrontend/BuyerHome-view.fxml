<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="733.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.approjectfrontend.BuyerHomeController"
            style="-fx-background-color: linear-gradient(to bottom,#f7f7f7,#ececec);">
    <VBox spacing="16" AnchorPane.topAnchor="18.0" AnchorPane.leftAnchor="18.0"
          AnchorPane.rightAnchor="18.0" AnchorPane.bottomAnchor="70.0">

        <!-- جستجو -->
        <TextField fx:id="searchField"
                   onKeyReleased="#handleSearch"
                   promptText="جستجو..."
                   prefHeight="38.0"
                   style="
                        -fx-background-color: #fafafa;
                        -fx-border-color: #cccccc;
                        -fx-border-radius: 10px;
                        -fx-background-radius: 10px;
                        -fx-font-size: 15px;
                        -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                        "/>

        <!-- علاقه‌مندی‌ها -->
        <TitledPane animated="false" text="رستوران‌های مورد علاقه" collapsible="false"
                    style="-fx-background-color: #ffffff; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-font-size: 14px; -fx-border-radius: 12px; -fx-border-color: #e5e5e5; -fx-padding: 0 0 4 0;">
            <ScrollPane prefHeight="150.0" fitToWidth="true"
                        style="-fx-background-color: #fcfcfc; -fx-border-color: #f1f1f1;">
                <VBox fx:id="favoritesVBox" spacing="10"
                      style="-fx-padding: 10;"/>
            </ScrollPane>
        </TitledPane>

        <!-- همه رستوران‌ها -->
        <Label text="همه رستوران‌ها"
               style="-fx-font-size: 17px; -fx-font-weight: bold; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-text-fill: #202020;"/>
        <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true"
                    style="-fx-background-color: transparent;">
            <VBox fx:id="restaurantListVBox" spacing="12"
                  style="-fx-padding:10;"/>
        </ScrollPane>
    </VBox>

    <!-- منوی پایین -->
    <HBox alignment="CENTER" spacing="0"
          style="-fx-background-color: linear-gradient(to top, #ededed, #dedede);
                 -fx-padding: 0 0 0 0; -fx-border-color: #d6d6d6; -fx-border-width:1 0 0 0;
                 -fx-effect: dropshadow(three-pass-box,#c8c8c8,6,0.11,0,1);"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" prefHeight="58.0">

        <Button fx:id="profileBtn" onAction="#goToProfile"
                style="-fx-background-radius:8px; -fx-font-size: 16px; -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                       -fx-text-fill: #191919; -fx-background-color: transparent; -fx-cursor: hand;"
                text="پروفایل"/>
        <Button fx:id="homeBtn"
                style="-fx-background-radius:8px; -fx-font-size: 16px; -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                       -fx-font-weight: bold; -fx-text-fill: #fff; -fx-background-color: #191919; -fx-cursor: hand;"
                text="خانه"/>
        <Button fx:id="historyBtn" onAction="#goToHistory"
                style="-fx-background-radius:8px; -fx-font-size: 16px; -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                       -fx-text-fill: #191919; -fx-background-color: transparent; -fx-cursor: hand;"
                text="تاریخچه"/>
        <Button onAction="#logout"
                style="-fx-background-radius:8px; -fx-font-size: 16px; -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                       -fx-text-fill: #756868; -fx-background-color: transparent; -fx-cursor: hand;"
                text="خروج"/>
    </HBox>
</AnchorPane>

