<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="22" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.approjectfrontend.WalletPaymentController"
      style="-fx-background-color: linear-gradient(to bottom,#ededed,#f7f7f7);
             -fx-padding: 36 28;
             -fx-background-radius: 20;
             -fx-effect: dropshadow(gaussian,rgba(176,176,176,0.11),12,0,0,3);">

    <Label text="پرداخت با کیف پول"
           style="-fx-font-size: 22px;
                  -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                  -fx-font-weight: bold;
                  -fx-text-fill: #191919;"/>

    <Label fx:id="walletBalanceLabel"
           style="-fx-font-size: 16px;
                  -fx-font-weight: bold;
                  -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                  -fx-text-fill: #242424;"/>

    <Button text="تایید پرداخت"
            onAction="#handleConfirmPayment"
            style="-fx-background-color: #191919;
                   -fx-text-fill: #fff;
                   -fx-font-size: 17px;
                   -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                   -fx-font-weight: bold;
                   -fx-background-radius: 13;
                   -fx-pref-width: 170px;
                   -fx-pref-height: 44px;
                   -fx-cursor: hand;"/>

    <Label fx:id="statusLabel"
           style="-fx-text-fill: #d10d3b;
                  -fx-font-size: 15px;
                  -fx-font-family: 'Vazirmatn', Tahoma, Arial;"/>
</VBox>
