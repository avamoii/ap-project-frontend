<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="733.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.approjectfrontend.SellerProfileController">

    <VBox alignment="CENTER" spacing="20"
          style="-fx-background-color: #f7f7f7;"
          AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="32" left="32" right="32" top="32" />
        </padding>
        <ImageView fx:id="profileImageView" fitHeight="120" fitWidth="120" style="-fx-background-radius: 60;" />
        <Button fx:id="uploadButton"
                style="-fx-background-color: #191919; -fx-text-fill: #fff; -fx-background-radius: 14; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-font-weight: bold;"
                text="انتخاب عکس" />
        <TextField fx:id="usernameField" promptText="نام کاربری" style="-fx-background-radius: 10; -fx-font-family: 'Vazirmatn', Tahoma, Arial;" />
        <TextField fx:id="emailField" promptText="ایمیل" style="-fx-background-radius: 10; -fx-font-family: 'Vazirmatn', Tahoma, Arial;" />
        <TextField fx:id="addressField" promptText="آدرس" style="-fx-background-radius: 10; -fx-font-family: 'Vazirmatn', Tahoma, Arial;" />
        <TextField fx:id="phoneField" promptText="شماره تماس" style="-fx-background-radius: 10; -fx-font-family: 'Vazirmatn', Tahoma, Arial;" />
        <TextField fx:id="bankNameField" promptText="نام بانک" style="-fx-background-radius: 10; -fx-font-family: 'Vazirmatn', Tahoma, Arial;" />
        <TextField fx:id="accountNumberField" promptText="شماره حساب" style="-fx-background-radius: 10; -fx-font-family: 'Vazirmatn', Tahoma, Arial;" />
        <Button fx:id="saveButton"
                style="-fx-background-color: #191919; -fx-text-fill: #fff; -fx-background-radius: 14; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-font-weight: bold;"
                text="ذخیره پروفایل" />
        <Button fx:id="logoutButton"
                style="-fx-background-color: #e85a5a; -fx-text-fill: white; -fx-background-radius: 14; -fx-font-family: 'Vazirmatn', Tahoma, Arial;"
                text="خروج از حساب کاربری" />
        <Label fx:id="messageLabel" textFill="green" />
    </VBox>

    <HBox alignment="CENTER" spacing="0"
          style="-fx-background-color: linear-gradient(to top,#ededed,#d7d7d7);
               -fx-border-color: #ddd;
               -fx-border-width: 1 0 0 0;"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <Button fx:id="homeButton"
                onAction="#goToHome" prefHeight="40.0"
                style="-fx-background-color: transparent;
                   -fx-text-fill: #191919;
                   -fx-font-size: 16px;
                   -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                   -fx-font-weight: bold;
                   -fx-cursor: hand;"
                text="خانه" HBox.hgrow="ALWAYS"/>

 <Button fx:id="myRestaurantButton"
                onAction="#goToMyRestaurant" prefHeight="40.0"
                style="-fx-background-color: transparent;
                   -fx-text-fill: #191919;
                   -fx-font-size: 16px;
                   -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                   -fx-font-weight: bold;
                   -fx-cursor: hand;"
                text="رستوران من" HBox.hgrow="ALWAYS"/>

        <!-- پروفایل (فعال) -->
        <Button fx:id="profileButton"
                prefHeight="40.0"
                style="-fx-background-color: #191919;
                   -fx-background-radius: 14;
                   -fx-text-fill: #fff;
                   -fx-font-size: 16px;
                   -fx-font-family: 'Vazirmatn', Tahoma, Arial;
                   -fx-font-weight: bold;
                   -fx-cursor: hand;"
                text="پروفایل" HBox.hgrow="ALWAYS"/>
    </HBox>
</AnchorPane>
