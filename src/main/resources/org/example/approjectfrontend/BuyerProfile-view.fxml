<AnchorPane prefHeight="550" prefWidth="400" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.approjectfrontend.BuyerProfileController">

    <!-- محتوای اصلی صفحه -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f6fff6;" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="32" left="32" right="32" top="32" />
        </padding>

        <ImageView fx:id="profileImageView" fitHeight="120" fitWidth="120" style="-fx-background-radius: 60;" />

        <Button fx:id="uploadButton" style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 20;" text="انتخاب عکس" />

        <TextField fx:id="usernameField" promptText="نام کاربری" style="-fx-background-radius: 10;" />
        <TextField fx:id="emailField" promptText="ایمیل" style="-fx-background-radius: 10;" />
        <TextField fx:id="addressField" promptText="آدرس" style="-fx-background-radius: 10;" />
        <TextField fx:id="phoneField" promptText="شماره تماس" style="-fx-background-radius: 10;" />

        <Button fx:id="saveButton" style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 20;" text="ذخیره پروفایل" />
        <Button fx:id="logoutButton" style="-fx-background-color: #e85a5a; -fx-text-fill: white; -fx-background-radius: 20;" text="خروج از حساب کاربری" />

        <Label fx:id="messageLabel" textFill="green" />
    </VBox>

    <!-- نوار ناوبری پایین صفحه -->
    <HBox alignment="CENTER" layoutX="73.0" layoutY="574.0" prefHeight="40.0" prefWidth="254.0" spacing="0" style="-fx-background-color: #27ae60;" AnchorPane.bottomAnchor="-0.40000000000009095" AnchorPane.leftAnchor="73.0" AnchorPane.rightAnchor="73.39999999999998">
        <Button fx:id="profileBtn" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-width: 133px;" text="پروفایل" />
        <Button fx:id="homeBtn" prefHeight="40.0" prefWidth="68.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-width: 133px;" text="خانه" />
        <Button fx:id="historyBtn" prefHeight="40.0" prefWidth="87.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-width: 133px;" text="تاریخچه" />
    </HBox>
</AnchorPane>
