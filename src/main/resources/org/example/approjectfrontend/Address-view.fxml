<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.approjectfrontend.AddressController"
      alignment="CENTER" spacing="20.0" prefWidth="400" prefHeight="280"
      style="-fx-background-color: #f7f7fa; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, #cccccc, 10, 0.5, 0, 4);">
   <children>
      <Label text="آدرس خود را وارد کنید" style="-fx-font-size: 18px; -fx-font-family: Tahoma; -fx-text-fill: #333;"/>

      <TextField fx:id="addressField" promptText="مثلاً: تهران، خیابان... "
                 style="-fx-font-size: 14px; -fx-padding: 8 10 8 10;  -fx-background-radius:8;"/>

      <Button  fx:id="submitButton" text="ثبت آدرس"
              style="-fx-background-color: #44c767; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 10;" onAction="#handleSubmit"/>
      <Label fx:id="messageLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 14px;"/>
   </children>
   <padding>
      <Insets top="35" right="30" bottom="35" left="30"/>
   </padding>
</VBox>
