<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.approjectfrontend.SubmitRatingController" spacing="15" style="-fx-padding: 20; -fx-background-color: #fafafa;" alignment="CENTER">
    <Label text="ثبت نظر برای سفارش" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="orderIdLabel" text="سفارش #..."/>

    <Label text="امتیاز شما (از ۱ تا ۵):"/>
    <Slider fx:id="ratingSlider" min="1" max="5" blockIncrement="1" majorTickUnit="1" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="3"/>
    <Label fx:id="ratingValueLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <Label text="نظر شما:"/>
    <TextArea fx:id="commentArea" promptText="نظر خود را اینجا بنویسید..." wrapText="true"/>

    <Button fx:id="submitButton" text="ثبت نهایی نظر" onAction="#handleSubmitRating" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
</VBox>
