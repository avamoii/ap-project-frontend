<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.approjectfrontend.CourierProfileController"
            prefWidth="400" prefHeight="600"
            style="-fx-background-color: #f6fff6;">
    <center>
        <VBox alignment="CENTER" spacing="16">
            <padding>
                <Insets top="28" right="32" bottom="20" left="32"/>
            </padding>

            <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100" style="-fx-background-radius: 50;"/>

            <Button fx:id="uploadButton" text="انتخاب عکس"
                    style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 13;"/>

            <TextField fx:id="usernameField" promptText="نام کاربری"
                       style="-fx-background-radius: 10;"/>
            <TextField fx:id="emailField" promptText="ایمیل"
                       style="-fx-background-radius: 10;"/>
            <TextField fx:id="phoneField" promptText="شماره تماس"
                       style="-fx-background-radius: 10;"/>
            <TextField fx:id="bankNameField" promptText="نام بانک"
                       style="-fx-background-radius: 10;"/>
            <TextField fx:id="accountNumberField" promptText="شماره اکانت"
                       style="-fx-background-radius: 10;"/>

            <Button fx:id="saveButton" text="ذخیره پروفایل"
                    style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 13;"/>
            <Button fx:id="logoutButton" text="خروج از حساب کاربری"
                    style="-fx-background-color: #e85a5a; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 13;"/>
            <Label fx:id="messageLabel" textFill="green" style="-fx-font-size: 13;"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: transparent; -fx-padding: 20 0 8 0;">
        <HBox alignment="CENTER" spacing="18"
              maxWidth="340"
              style="-fx-background-color: #54C16E; -fx-padding: 9 32 9 32; -fx-background-radius: 20;">

        <Button fx:id="homeBtn" text="خانه"
                    minWidth="70" minHeight="28"
                    style="-fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: transparent;"/>
            <Button fx:id="profileBtn" text="پروفایل"
                    minWidth="70" minHeight="28"
                    style="-fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: transparent;"/>
        </HBox>
        </HBox>
    </bottom>
</BorderPane>
