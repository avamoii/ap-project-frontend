<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.approjectfrontend.CourierProfileController" prefHeight="600" prefWidth="400" style="-fx-background-color: #f6fff6;">
    <center>
        <VBox alignment="CENTER" spacing="16">
            <padding>
                <Insets bottom="20" left="32" right="32" top="28" />
            </padding>
            <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100" style="-fx-background-radius: 50;" />
            <Button fx:id="uploadButton" style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 13;" text="انتخاب عکس" />
            <TextField fx:id="usernameField" promptText="نام کاربری" style="-fx-background-radius: 10;" />
            <TextField fx:id="emailField" promptText="ایمیل" style="-fx-background-radius: 10;" />
            <TextField fx:id="phoneField" promptText="شماره تماس" style="-fx-background-radius: 10;" />
            <TextField fx:id="bankNameField" promptText="نام بانک" style="-fx-background-radius: 10;" />
            <TextField fx:id="accountNumberField" promptText="شماره اکانت" style="-fx-background-radius: 10;" />
            <Button fx:id="saveButton" style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 13;" text="ذخیره پروفایل" />
            <Button fx:id="logoutButton" style="-fx-background-color: #e85a5a; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 13;" text="خروج از حساب کاربری" />
            <Label fx:id="messageLabel" style="-fx-font-size: 13;" textFill="green" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: transparent; -fx-padding: 20 0 8 0;">
            <HBox alignment="CENTER" maxWidth="340" spacing="18" style="-fx-background-color: #54C16E; -fx-padding: 9 32 9 32; -fx-background-radius: 20;">
                <Button fx:id="homeBtn" minHeight="28" minWidth="70" style="-fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: transparent;" text="خانه" />
                <Button fx:id="historyBtn" minHeight="28" minWidth="70" style="-fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: transparent;" text="تاریخچه" />
                <Button fx:id="profileBtn" minHeight="28" minWidth="70" style="-fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: transparent;" text="پروفایل" />
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
