<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.approjectfrontend.LoginController"
           prefHeight="750.0" prefWidth="500.0"> <stylesheets>
    <URL value="@styles.css"/>
</stylesheets>

    <ImageView fitHeight="750.0" fitWidth="500.0" pickOnBounds="true">
        <image>
            <Image url="@A.jpeg"/>
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="20" styleClass="form-container-card" maxWidth="350">

        <ImageView fitHeight="100" fitWidth="100">
            <image>
                <Image url="@logo.jpeg"/>
            </image>
        </ImageView>

        <Label text="Log In" styleClass="page-title"/>

        <TextField fx:id="phonenumberField" promptText="Phone Number" styleClass="rounded-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="rounded-field"/>

        <Button onAction="#handleLogin" text="Log In" styleClass="action-button"/>

        <Hyperlink onAction="#goToSignUp" text="Don't have an account? Sign Up"/>
        <Label fx:id="messageLabel" styleClass="message-label"/>
    </VBox>
</StackPane>