<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.approjectfrontend.CourierHomeController"
            prefHeight="600.0" prefWidth="733.0"
            style="-fx-background-color: linear-gradient(to bottom, #f5f5f5, #eaeaea);">

    <center>
        <ListView fx:id="deliveriesListView" prefHeight="320" prefWidth="420"
                  style="-fx-background-color: white; -fx-background-radius: 14px; -fx-border-color: #d2d2d2; -fx-border-radius: 14px; -fx-padding: 14 22 14 22; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-font-size: 16px;"/>
    </center>

    <bottom>
        <HBox alignment="CENTER"
              style="-fx-background-color: linear-gradient(to top,#f3f3f3,#dddddd); -fx-padding: 18 0 8 0; -fx-border-color: #ccc; -fx-border-width: 1px 0 0 0;">
            <HBox alignment="CENTER" maxWidth="360" spacing="26"
                  style="-fx-background-color: #fff; -fx-padding: 9 32 9 32; -fx-background-radius: 17px; -fx-effect: dropshadow(three-pass-box, #cccccc, 8, 0.12, 0, 1);">

                <Button fx:id="homeBtn" minHeight="31" minWidth="80"
                        style="-fx-background-radius: 8px; -fx-font-size: 15px; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #111;" text="خانه"/>
                <Button fx:id="historyBtn" minHeight="31" minWidth="80"
                        style="-fx-background-radius: 8px; -fx-font-size: 15px; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-text-fill: #222; -fx-background-color: transparent;" text="تاریخچه"/>
                <Button fx:id="profileBtn" minHeight="31" minWidth="80"
                        style="-fx-background-radius: 8px; -fx-font-size: 15px; -fx-font-family: 'Vazirmatn', Tahoma, Arial; -fx-text-fill: #222; -fx-background-color: transparent;" text="پروفایل"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
