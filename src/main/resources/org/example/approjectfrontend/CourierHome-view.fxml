<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.approjectfrontend.CourierHomeController"
            prefHeight="400.0" prefWidth="600.0">


    <center>
        <ListView fx:id="ordersListView"
                  prefWidth="400"
                  prefHeight="300"
                  style="-fx-background-radius: 15; -fx-padding: 10;"
        />
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: transparent; -fx-padding: 20 0 8 0;">
            <HBox alignment="CENTER" spacing="18"
                  maxWidth="340"
                  style="-fx-background-color: #54C16E; -fx-padding: 9 32 9 32; -fx-background-radius: 20;">

                <Button fx:id="homeBtn" text="خانه"
                        minWidth="70" minHeight="28"
                        style="-fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: transparent;"/>
                <Button fx:id="profileBtn" text="پروفایل"
                        minWidth="70" minHeight="28"
                        style="-fx-background-radius: 10; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: transparent;"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
