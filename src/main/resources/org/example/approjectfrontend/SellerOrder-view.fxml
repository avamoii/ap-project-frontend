<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.approjectfrontend.SellerOrderController"
      spacing="15" style="-fx-padding: 15;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="restaurantNameLabel"
               style="-fx-font-size:17px; -fx-font-weight:bold;" />
        <Button text="بازگشت" onAction="#backToHome"
                style="-fx-font-size:13; -fx-background-color: #f0ad4e; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="ordersTable" prefHeight="400">
        <columns>
            <TableColumn text="خریدار" fx:id="buyerColumn" prefWidth="80"/>
            <TableColumn text="آیتم‌ها" fx:id="itemsColumn" prefWidth="130"/>
            <TableColumn text="قیمت کل" fx:id="totalPriceColumn" prefWidth="70"/>
            <TableColumn text="آدرس" fx:id="addressColumn" prefWidth="120"/>
            <TableColumn text="تلفن" fx:id="mobileColumn" prefWidth="100"/>
            <TableColumn text="وضعیت" fx:id="statusColumn" prefWidth="110"/>
            <TableColumn text="عملیات" fx:id="actionsColumn" prefWidth="120"/>
        </columns>
        <placeholder>
            <Label text="هیچ سفارشی برای این رستوران یافت نشد."/>
        </placeholder>
    </TableView>

</VBox>
