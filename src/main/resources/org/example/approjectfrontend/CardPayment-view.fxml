<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="15" fx:controller="org.example.approjectfrontend.CardPaymentController">
    <Label text="پرداخت با کارت" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="cardNumberField" promptText="شماره کارت"/>
    <Button text="پرداخت" onAction="#handleCardPayment"    style="-fx-background-color: linear-gradient(to left, #51eaea 0%, #6b0ac9 100%);
               -fx-text-fill: white;
               -fx-font-size: 17px;
               -fx-font-weight: bold;
               -fx-background-radius: 15;
               -fx-pref-width: 140px;
               -fx-pref-height: 40px;
               -fx-cursor: hand;"/>
    <Label fx:id="errorLabel" style="-fx-text-fill:red"/>
</VBox>
