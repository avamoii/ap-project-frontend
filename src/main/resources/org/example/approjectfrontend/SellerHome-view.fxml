<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.approjectfrontend.SellerHomeController">
    <!-- لیست کارت رستوران‌ها -->
    <VBox fx:id="restaurantsVBox"
          layoutX="0.0" layoutY="0.0"
          spacing="12"
          AnchorPane.topAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="40.0">
        <!-- کارت‌ها به صورت داینامیک اینجا اضافه یا حذف می‌شوند -->
    </VBox>
    <HBox alignment="CENTER" spacing="0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Button fx:id="homeButton" prefHeight="27.0" prefWidth="92.0" style="-fx-background-color: #43b649; -fx-text-fill: white; -fx-background-radius: 0;" text="خانه" HBox.hgrow="ALWAYS" />
        <Button fx:id="myRestaurantButton" onAction="#goToMyRestaurant" prefHeight="27.0" prefWidth="111.0" style="-fx-background-color: #43b649; -fx-text-fill: white; -fx-background-radius: 0; " text="رستوران من" HBox.hgrow="ALWAYS" />
        <Button fx:id="profileButton"  onAction="#goToProfile" prefHeight="27.0" prefWidth="109.0" style="-fx-background-color: #43b649; -fx-text-fill: white; -fx-background-radius: 0;" text="پروفایل" HBox.hgrow="ALWAYS" />
    </HBox>
</AnchorPane>
