<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.approjectfrontend.ProfileController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f6fff6;"
      prefWidth="400"
      prefHeight="550"
>
    <padding>
        <Insets top="32" bottom="32" left="32" right="32"/>
    </padding>

    <ImageView fx:id="profileImageView"
               fitWidth="120"
               fitHeight="120"
               style="-fx-background-radius: 60;"/>

    <Button fx:id="uploadButton"
            text="انتخاب عکس"
            style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 20;"/>

    <TextField fx:id="addressField"
               promptText="آدرس"
               style="-fx-background-radius: 10;"/>

    <TextField fx:id="phoneField"
               promptText="شماره تماس"
               style="-fx-background-radius: 10;"/>

    <TextField fx:id="bankNameField"
               promptText="نام بانک"
               style="-fx-background-radius: 10;"/>

    <TextField fx:id="bankAccountField"
               promptText="شماره حساب"
               style="-fx-background-radius: 10;"/>

    <Button fx:id="saveButton"
            text="ذخیره پروفایل"
            style="-fx-background-color: #54C16E; -fx-text-fill: white; -fx-background-radius: 20;"/>

    <Label fx:id="messageLabel"
           text=""
           style="-fx-font-size: 13px; -fx-text-fill: #e74c3c;" />

</VBox>
