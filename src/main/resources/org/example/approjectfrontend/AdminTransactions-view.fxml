            <TableColumn fx:id="colAmount" prefWidth="88.00006103515625" style="-fx-alignment: CENTER;" text="مبلغ" />
            <!-- ستون وضعیت -->
            <TableColumn fx:id="colStatus" prefWidth="97.60003662109375" style="-fx-alignment: CENTER;" text="وضعیت" />
            <!-- ستون تاریخ -->
            <TableColumn fx:id="colDate" prefWidth="96.80001831054688" style="-fx-alignment: CENTER;" text="تاریخ" />
        </columns>
    </TableView>
</VBox>
