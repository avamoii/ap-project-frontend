<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #f8f8f8; -fx-background-radius: 12;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.approjectfrontend.RestaurantPageController"
            prefWidth="600" prefHeight="480">
    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" style="-fx-padding: 15;">

        <HBox spacing="16" alignment="CENTER_LEFT">
            <ImageView fx:id="logoView" fitHeight="64" fitWidth="64"
                       pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="nameLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        </HBox>
        <Separator/>

        <Label text="منو:" style="-fx-font-size: 17px; -fx-font-weight: bold;"/>
        <ListView fx:id="menuListView" prefHeight="200" style="-fx-font-size: 15px;"/>

        <TextField fx:id="addressField" promptText="آدرس خود را وارد کنید..."
                   prefWidth="320"
                   style="-fx-background-color: #f3fff3; -fx-background-radius: 4;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="couponCodeField" promptText="کد تخفیف..."/>
            <Button text="تایید"
                    fx:id="applyCouponButton"
                    onAction="#handleApplyCoupon"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 6;"/>
            <Label fx:id="couponStatusLabel" style="-fx-text-fill: #16a085;"/>
        </HBox>
        <Label fx:id="totalPriceLabel" text="هزینه کل: ۰ تومان" />

        <!-- دکمه ثبت سفارش حذف و دکمه پرداخت به دکمه اصلی تبدیل شد -->
        <Button fx:id="submitAndPayButton" text="ثبت و پرداخت"
                maxWidth="160"
                style="-fx-font-size: 15px; -fx-background-color: #44c767; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"
                onAction="#handleSubmitAndPay"/>

        <Button fx:id="backButton" text="بازگشت به لیست رستوران‌ها" onAction="#handleBackButton"
                maxWidth="250"
                style="-fx-font-size: 15px; -fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
