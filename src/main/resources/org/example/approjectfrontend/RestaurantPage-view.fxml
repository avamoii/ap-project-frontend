<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #f8f8f8; -fx-background-radius: 12;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.approjectfrontend.RestaurantPageController" prefWidth="600" prefHeight="480">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" style="-fx-padding: 15;">

        <HBox spacing="16" alignment="CENTER_LEFT">
            <ImageView fx:id="logoView" fitHeight="64" fitWidth="64" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="nameLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS" />
            <ToggleButton fx:id="favoriteButton" text="افزودن به علاقه‌مندی‌ها" onAction="#handleFavoriteChange" />
        </HBox>

        <ListView fx:id="menuListView" prefHeight="200" style="-fx-font-size: 15px;" />
        <TextField fx:id="addressField" promptText="آدرس خود را وارد کنید..." prefWidth="320" style="-fx-background-color: #f3fff3; -fx-background-radius: 4;" />

        <HBox spacing="10" alignment="CENTER" maxWidth="320">
            <TextField fx:id="couponCodeField" promptText="کد تخفیف (اختیاری)" HBox.hgrow="ALWAYS"/>
            <Button fx:id="applyCouponButton" text="اعمال" onAction="#handleApplyCoupon"/>
        </HBox>
        <Label fx:id="couponStatusLabel" style="-fx-font-size: 12px;"/>
        <Label fx:id="totalPriceLabel" text="هزینه کل: ۰ تومان" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Button fx:id="submitAndPayButton" text="ثبت و پرداخت" maxWidth="160" style="-fx-font-size: 15px; -fx-background-color: #44c767; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;" onAction="#handleSubmitAndPay" />
        <Button fx:id="backButton" text="بازگشت" onAction="#handleBackButton" maxWidth="250" style="-fx-font-size: 15px; -fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;" />
    </VBox>
</AnchorPane>